startSpinner = ->
  $('#loading-spinner').show()

stopSpinner = ->
  $('#loading-spinner').fadeOut()

# Turbolinks Spinner
document.addEventListener 'page:fetch', startSpinner
document.addEventListener 'page:receive', stopSpinner

